# Google API Credentials Configuration
# Copy this file to .env and fill in your actual credentials

# Google Service Account Credentials
GOOGLE_PROJECT_ID=your-google-cloud-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id

# Alternative: Path to Service Account JSON file
# GOOGLE_SERVICE_ACCOUNT_PATH=path/to/service-account.json

# Test Configuration
TEST_ENVIRONMENT=development
LOG_LEVEL=info

# API Rate Limiting
SHEETS_API_RATE_LIMIT=100
DRIVE_API_RATE_LIMIT=1000

# Test Data Configuration
GENERATE_TEST_DATA=true
TEST_RECORD_COUNT=100
CLEANUP_AFTER_TESTS=false

# Notification Settings (Optional)
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# Performance Thresholds
MAX_QUERY_TIME_MS=2000
MAX_API_LATENCY_MS=1000
MIN_THROUGHPUT_OPS_SEC=10